{
  "run": [
    {
      "method": "shell.run",
      "params": {
        "message": [
          "git clone https://github.com/supertone-inc/supertonic app"
        ]
      }
    },
    {
      "method": "shell.run",
      "params": {
        "path": "app",
        "message": "hf download Supertone/supertonic --local-dir ./assets"
      }
    },
    {
      "method": "fs.copy",
      "params": {
        "src": "webui.py",
        "dest": "app/py/webui.py"
      }
    },
    {
      "method": "fs.copy",
      "params": {
        "src": "requirements.txt",
        "dest": "app/requirements.txt"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "venv": "venv",
        "path": "app",
        "message": [
          "uv pip install -r requirements.txt"
        ]
      }
    }
  ]
}
